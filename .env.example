# API Settings
API_TITLE=Prompt Evaluation API
API_VERSION=0.1.0

# AWS Settings (실제 사용시 입력 필요)
AWS_REGION=us-east-1
AWS_REGION_SQS_DDB=ap-northeast-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# SQS & DynamoDB Settings (서울 리전)
SQS_QUEUE_URL=https://sqs.ap-northeast-2.amazonaws.com/your_account_id/your_queue_name
DDB_TABLE_NAME=your_dynamodb_table_name

# Perplexity API Keys (환각 탐지용)
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_API_KEY_2=your_backup_perplexity_api_key_here

# Database
DATABASE_URL=sqlite:///./prompt_eval.db

# Storage Backend
STORAGE_BACKEND=sqlite
S3_BUCKET_NAME=your_s3_bucket_name
TABLE_NAME=prompt-evaluations

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600

# Mock Mode (개발/테스트용)
MOCK_MODE=false

# Consistency Parameters
ALPHA=0.2